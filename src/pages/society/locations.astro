---
import Gallery from "../../components/Gallery.jsx";
import Main from "../../layouts/Main.astro";
import { LOCATION_PICS, LOCATION_LINKS } from "../../data/locations.js";
---

<Main title="Locations">
	<h1 class="text-lg font-semibold">Locations</h1>

	<div class="flex gap-2 md:flex-row flex-col my-5 items-center justify-center">
		<div class="w-52">
			<img alt="Pixel Art Animated Gif" src="/assets/slab.gif" />
		</div>
		<div class="flex flex-col gap-2 mx-3 my-auto col-span-2">
			<div class="flex gap-2 items-center opacity-20">
				<span
					class="font-semibold px-3 py-1 bg-black text-white dark:bg-white dark:text-black"
					>EN 2036</span
				>
				<span class="align-center">The CS Student Lab</span>
			</div>
			<div class="flex gap-2 items-center">
				<span class="align-center"
					>Open for Computer Science students between 8 AM and 10 PM, keycard access is required to open the room. Classes are sometimes scheduled in the lab so check schedule before entering.</span
				>
			</div>
			<div class="flex gap-2 items-center">
				<span
					class="font-semibold px-3 py-1 bg-black text-white dark:bg-white dark:text-black"
					>ER 4068</span
				>
				<span class="align-center">Alexander Murray Room</span>
			</div>
		</div>
	</div>

